<% if user_signed_in? %>
<h1>Friends List</h1>

<table class="table table-striped table-bordered table-hover" id="friends">
  <thead class="table-dark">
    <tr>
      <th>Friend Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>
    </tr>
  </thead>

  <tbody class="table" id="friends">
    <% @friends.each do |friend| %>
      <%= render friend %>
    <% end %>
  </tbody>
</table>

<%= link_to "New friend", new_friend_path, class:"btn btn-secondary" %>
<% else %>
  <h1>Hello World</h1>
  <p>Find me in app/views/home/index.html.erb</p>
<% end %>