<% if user_signed_in? %>
<h1>Friends List</h1>

<table class="table table-striped table-bordered table-hover" id="friends">
  <thead class="table-dark">
    <tr>
      <th>Friend Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>
    </tr>
  </thead>

  <tbody class="table" id="friends">
    <% @friends.each do |friend| %>
      <%= render friend %>
    <% end %>
  </tbody>
</table>

<%= link_to "New friend", new_friend_path, class:"btn btn-secondary" %>
<% else %>
  <h1 class="display-4">Welcome to Friend List Application</h1>
  <h5 class="mt-5">
    Before you start adding your new friends, you need to
    <%= link_to "sign up",  new_user_registration_path, class: "anchor" %>
    if you are a new member, or
    <%= link_to "log in", new_user_session_path, class: "anchor" %>
    if you are a member.
  </h5>
<% end %>